<?xml version="1.0" encoding="utf-8"?>
    <!-- res/values/styles.xml -->
    <resources>

        <!-- Base application theme -->
    <!-- App theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#313131</item>
        <item name="android:background">#B4B2B2</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:textViewStyle">@style/CustomText</item>
    </style>

    <!-- TextView style -->
    <style name="CustomText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#313131</item>
    </style>

    <!-- Button style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">#6F5A92</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="GameButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#313131</item>
        <item name="android:backgroundTint">#c3aed6</item>
    </style>


</resources>
